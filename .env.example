# =============================================================================
# ZeroCost Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values
# cp .env.example .env
# =============================================================================

# -----------------------------------------------------------------------------
# Database Configuration (PostgreSQL)
# -----------------------------------------------------------------------------
POSTGRES_USER=zerocost
POSTGRES_PASSWORD=zerocost123
POSTGRES_DB=zerocost
DATABASE_URL=jdbc:postgresql://localhost:5432/zerocost

# -----------------------------------------------------------------------------
# Redis Configuration
# -----------------------------------------------------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# -----------------------------------------------------------------------------
# Service URLs
# -----------------------------------------------------------------------------
RANKING_ENGINE_URL=http://localhost:8082
JAVA_API_URL=http://localhost:8080

# -----------------------------------------------------------------------------
# Authentication
# -----------------------------------------------------------------------------
# Generate a secure random string (at least 256 bits / 32 characters)
# You can generate one with: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars

# -----------------------------------------------------------------------------
# Go Scraper Configuration
# -----------------------------------------------------------------------------
SCRAPER_INTERVAL_MINUTES=30
SCRAPER_USER_AGENT=ZeroCostBot/1.0
MAX_CONCURRENT_SCRAPERS=4
REQUEST_DELAY_MS=1000

# -----------------------------------------------------------------------------
# External API Keys (Required for scraping real data)
# -----------------------------------------------------------------------------

# Reddit API (https://www.reddit.com/prefs/apps)
# Create a "script" type application
REDDIT_CLIENT_ID=
REDDIT_CLIENT_SECRET=

# Eventbrite API (https://www.eventbrite.com/platform/api-keys)
EVENTBRITE_API_KEY=

# Meetup API (https://www.meetup.com/api/oauth/list/)
MEETUP_API_KEY=

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO

# -----------------------------------------------------------------------------
# Spring Boot Profile
# -----------------------------------------------------------------------------
SPRING_PROFILES_ACTIVE=dev
